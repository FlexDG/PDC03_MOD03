<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MOD3.MainPage">

    <StackLayout Margin="10,0,10,0" HorizontalOptions="FillAndExpand" Spacing="20">
        <Frame BackgroundColor="SkyBlue" Padding="24" Margin="10,5,0,20" CornerRadius="20">
            <Label Text="Welcome to De Guzman's Module 03 Activities!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Act 01 - StackLayout" Clicked="Activity01"  BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30"/>
        <Button Text="Act 02 - Frame" Clicked="Activity02"  BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30"/>
        <Button Text="Act 03 - Grid" Clicked="Activity03"  BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30"/>
        <Button Text="Act 04 - Registration Page" Clicked="Activity04" BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30" />
        <Button Text="Act 05 - Header" Clicked="Activity05" BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30" />
        <Button Text="Act 06 - Embeded Image" Clicked="Activity06" BackgroundColor="DeepSkyBlue" TextColor="White" CornerRadius="30"/>
 
    </StackLayout>

</ContentPage>
